# Postgres (obrigatório)
POSTGRES_USER=evolution
POSTGRES_PASSWORD=super-secure-password
POSTGRES_DB=evolution

# URL público (ngrok, domínio próprio etc.)
SERVER_URL=https://your-evolution-domain.com

# Autenticação (reutilize no EVOLUTION_API_KEY do bot)
AUTHENTICATION_API_KEY=change-me
AUTHENTICATION_TYPE=apikey

# Webhook global apontando para o WhatsApp Chatbot
WEBHOOK_GLOBAL_ENABLED=true
WEBHOOK_GLOBAL_URL=https://hackathonopenai-api.azurewebsites.net/webhook/evolution
WEBHOOK_EVENTS_MESSAGES_UPSERT=true

# Banco primário (PostgreSQL ou MySQL)
DATABASE_PROVIDER=postgresql
DATABASE_ENABLED=true
DATABASE_CONNECTION_URI=postgresql://evolution:super-secure-password@postgres:5432/evolution?schema=public
DATABASE_CONNECTION_DB_PREFIX_NAME=evolution

# Cache Redis (requer serviço redis no docker-compose)
CACHE_REDIS_ENABLED=true
CACHE_REDIS_URI=redis://redis:6379/6
CACHE_REDIS_PREFIX_KEY=evolution
CACHE_REDIS_SAVE_INSTANCES=false
CACHE_LOCAL_ENABLED=false

# Porta exposta localmente
EVOLUTION_PORT=8080

